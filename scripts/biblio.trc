LABEL MAIN
    CLS
    SHOWXY 1 37 "BIBLIO"
    SHOWXY 3 18   "1. UPLOAD BIBLIO.DB TO FLOPPY DISKETTE IN A:"
    SHOWXY 4 18   "2. DOWNLOAD BIBLIO.DB TO I:\SIL\SHOEBOX\DATA"
    SHOWXY 5 18   "3. VERIFY UPLOAD/DOWNLOAD"
    SHOWXY 6 18   "4. VIEW CONTENTS OF A:\BIBLIO.DB"
    SHOWXY 7 18   "5. VIEW CONTENTS OF I:\SIL\SHOEBOX\DATA\BIBLIO.DB"
    SHOWXY 8 18   "Q. QUIT"
    VAR OPT ""
    SHOWXY 10 18   "OPTION: "
LABEL GET
    GOTOXY 10 26
    GETCHAR OPT
    IF VAR OPT NI "12345Qq"
        GOTO GET
    ENDIF
    NOTIFY "&'VAR OPT'"

    GOTO OPT&'VAR OPT'
LABEL OPT1
    CLS
    PAUSE "UPLOAD. Place diskette in drive A: "
    SHELL "COPY I:\SIL\SHOEBOX\DATA\BIBLIO.DB A:"
    GOTO MAIN
LABEL OPT2
    CLS
    PAUSE "DOWNLOAD. Place diskette in drive A: "
    SHELL "COPY A:\BIBLIO.DB I:\SIL\SHOEBOX\DATA"
    GOTO MAIN
LABEL OPT3
    CLS
    NOTIFY "VERIFY."
    SHELL "DIR A:\BIBLIO.DB"
    SHELL "DIR I:\SIL\SHOEBOX\DATA\BIBLIO.DB"
    SHELL "FC A:\BIBLIO.DB I:\SIL\SHOEBOX\DATA\BIBLIO.DB"
    PAUSE
    GOTO MAIN
LABEL OPT4
    SHELL "LIST A:\BIBLIO.DB"
    GOTO MAIN
LABEL OPT5
    SHELL "LIST I:\SIL\SHOEBOX\DATA\BIBLIO.DB"
    GOTO MAIN
LABEL OPTQ
    HALT

    HALT
