        CHDIR C:\appl\RATBAS
        VAR DEFAULT ""
        VAR FILTER "*.RAT"
LABEL LOOP
        VAR OPT ""
        VAR FILE ""
        VAR TMP ""
        CLS
        shell "DIR &'VAR FILTER'/W"
        NOTIFY
        NOTIFY "                1. EDIT         5. LIST"
        NOTIFY "                2. RATBAS       6. RENUM BASIC"
        NOTIFY "                3. RUN          7. SET DIR FILTER"
        NOTIFY "                4. SHELL        8. QUIT"
LABEL GET
        VAR OPT ""
        GETCHAR OPT
IF VAR OPT NI "12345678"
GOTO GET
ENDIF
NOTIFY "&'VAR OPT'"
GOTO OPT&'VAR OPT'


LABEL OPT1
INPUT "FILE TO EDIT [DEFAULT=&'VAR DEFAULT']: " FILE
IF VAR FILE EQ "."
GOTO LOOP
ENDIF
IF VAR FILE EQ ""
VAR FILE "&'VAR DEFAULT'"
ELSE
VAR DEFAULT "&'VAR FILE'"
ENDIF
INVOKE "C:\TOOLS\SEE.EXE" "&'VAR FILE'"
GOTO LOOP

LABEL OPT2
INPUT "FILE TO RATBAS [DEFAULT=&'VAR DEFAULT']: " FILE
IF VAR FILE EQ "."
GOTO LOOP
ENDIF
IF VAR FILE EQ ""
VAR FILE "&'VAR DEFAULT'"
ELSE
VAR DEFAULT "&'VAR FILE'"
ENDIF
shell "rat &'VAR FILE'"
GOTO LOOP

LABEL OPT3
INPUT "FILE TO RUN [DEFAULT=&'VAR DEFAULT']: " FILE
IF VAR FILE EQ "."
GOTO LOOP
ENDIF
IF VAR FILE EQ ""
VAR FILE "&'VAR DEFAULT'"
ELSE
VAR DEFAULT "&'VAR FILE'"
ENDIF
INVOKE "C:\DOS\GWBASIC.EXE" "&'VAR FILE'"
GOTO LOOP

LABEL OPT4
INVOKE "C:\DOS\COMMAND.COM" ""
GOTO LOOP

LABEL OPT5
INPUT "FILE TO LIST [DEFAULT=&'VAR DEFAULT']: " FILE
IF VAR FILE EQ "."
GOTO LOOP
ENDIF
IF VAR FILE EQ ""
VAR FILE "&'VAR DEFAULT'"
ELSE
VAR DEFAULT "&'VAR FILE'"
ENDIF
INVOKE "C:\TOOLS\LIST.COM" "&'VAR FILE'"
GOTO LOOP

LABEL OPT6
INPUT "FILE TO RENUM [DEFAULT=&'VAR DEFAULT']: " FILE
IF VAR FILE EQ "."
GOTO LOOP
ENDIF
IF VAR FILE EQ ""
VAR FILE "&'VAR DEFAULT'"
ELSE
VAR DEFAULT "&'VAR FILE'"
ENDIF
SHELL 'ECHO LOAD "&`VAR FILE`">TMP'
SHELL 'ECHO RENUM >>TMP'
SHELL 'ECHO SAVE "&`VAR FILE`",A>>TMP'
SHELL 'GWBASIC <TMP'
SHELL 'DEL TMP'
GOTO LOOP

LABEL OPT7
VAR TMP ""
INPUT "DIRECTORY FILTER: " TMP
IF VAR TMP NE ""
VAR FILTER VAR TMP
ENDIF
GOTO LOOP

